{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "OpenOCD Debug",
			"type": "gdb",
			"request": "attach",
			"cwd": "${workspaceFolder}",
			"executable": "${workspaceRoot}/build/${workspaceFolderBasename}.elf",
			"target": ":3333",
			"remote": true,
			"gdbpath": "C:/Program Files/Espressif/ESP-IDF Tools/tools/bin/xtensa-esp32-elf-gdb.exe",
			"preLaunchTask": "OpenOCD",
			"autorun": [
			  "mon reset halt",
			  "flushregs",
			  "thb app_main",
			  "c"
			],
		  }
	]
}
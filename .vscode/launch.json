{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "OpenOCD Debug",
            "type": "gdb",
            "request": "attach",
			"cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/Esp32_debug_template.elf",
            "target": ":3333",
			"remote": true,
			"preLaunchTask": "OpenOCD",
            "gdbpath": "C:/Program Files/Espressif/ESP-IDF Tools/tools/bin/xtensa-esp32-elf-gdb.exe",
            "autorun": [
                "mon reset halt",
                "flushregs",
				"break app_main"
			],
		}
	]
}